<h1>ブログ一覧</h1>
<%= form_with(model: @blog, local: true) do | f | %>
<%= notice %>
  <table>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>投稿画像</th>
      <th>投稿者</th>
    </tr>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= %></td>
        <td><%= blog.user.name %></td>
        <td><%= link_to "詳細へ", blog_path(blog.id) %></td>
        <td><%= link_to "編集へ", edit_blog_path(blog.id) %></td>
        <td><%= link_to "削除する", blog_path(blog.id), method: :delete, data:{ confirm: "削除しますか？" } %></td>
      </tr>
    <% end %>
  </table>
  <div>
    <%= link_to "新規投稿へ", new_blog_path %>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do | f |%>
  <div class="error_explanation">
    <% if @user.errors.any? %>
      <p><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %>from being saved: </p>
      <ul>
        <% @user.errors.full_messages.each do | msg | %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="form-field">
    <div>
      <%= f.label :"お名前:", class:"input-label" %>
      <%= f.text_field :"name", class:"input"  %>
    </div>
    <div>
      <%= f.label :"Eメールアドレス:", class:"input-label"  %>
      <%= f.email_field :"email", class:"input"  %>
    </div>
    <div>
      <%= f.label :"パスワード:", class:"input-label"  %>
      <%= f.password_field :"password", class:"input"  %>
    </div>
    <div>
      <%= f.label :"パスワード確認:", class:"input-label"  %>
      <%= f.password_field :"password_confirmation", class:"input"  %>
    </div>
    <div>
      <%= f.label :"プロフィール写真", class:"input-label" %>
      <%= f.file_field "selfpicture", class:"input"  %>
    </div>
    <div>
      <%= f.submit "登録をする", class:"input"%>
    </div>
    <div>
      <%= link_to "ブログ一覧へ", blogs_path, class:"link"  %>
    </div>
  </div>


<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>INSklone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <header>
      <div class="header-logo">
        <h2>INSKlone</h2>
      </div>
      <div class="login">
        <% if logged_in? %>
        <%= link_to "マイページ", user_path(current_user.id), class:"header-link" %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete, class:"header-link" %>
        <% else %>
        <%= link_to "新規ユーザー登録", new_user_path, class:"header-link" %>
        <%= link_to "ログイン", new_session_path, class:"header-link" %>
        <% end %>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>

    </footer>
  </body>

</html>
